{
  "homeassistant": {
    "url": "https://your-ha-instance.local:8123",
    "token": "your_long_lived_access_token_here",
    "entity_id": "sensor.power_consumption"
  },
  "github": {
    "token": "ghp_your_github_personal_access_token",
    "repo": "your-username/power-stats-data",
    "branch": "main"
  },
  "data": {
    "retention_days": 7,
    "collection_interval_minutes": 10
  },
  "admin": {
    "username": "admin",
    "password_hash": "pbkdf2:sha256:your_hashed_password"
  },
  "paths": {
    "state_file": "/etc/monitor.conf",
    "web_root": "/var/www/html",
    "data_dir": "/var/www/html"
  },
  "comments": {
    "data_files": "System maintains 4 JSON files: daily.json (24h), weekly.json (7d local), monthly.json (30d GitHub), yearly.json (365d GitHub)"
  }
}
