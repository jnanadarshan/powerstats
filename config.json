{
  "homeassistant": {
    "url": "http://homeassistant.local:8123",
    "token": "YOUR_HOME_ASSISTANT_LONG_LIVED_ACCESS_TOKEN",
    "entities": {
      "voltage": "sensor.voltage",
      "daily_energy": "sensor.daily_energy_consumption",
      "power": "sensor.live_power_usage",
      "solar": "sensor.solar_generation",
      "power_factor": "sensor.power_factor"
    },
    "note": "Create long-lived access token at: http://homeassistant.local:8123/profile (scroll to bottom). Update entity IDs to match your Home Assistant sensors."
  },
  "github": {
    "token": "YOUR_GITHUB_PERSONAL_ACCESS_TOKEN",
    "repo": "username/repo-name",
    "branch": "main",
    "user": {
      "name": "Your Name",
      "email": "your.email@example.com"
    },
    "note": "Create token with 'repo' permissions at: https://github.com/settings/tokens/new"
  },
  "data": {
    "retention_days": 7,
    "local_collection_interval_minutes": 10,
    "publish_interval_minutes": 60,
    "health_check_interval_seconds": 10
  },
  "admin": {
    "username": "admin",
    "password_hash": "changeme_placeholder",
    "note": "This will be auto-generated during installation"
  },
  "paths": {
    "state_file": "/etc/monitor.conf",
    "web_root": "/var/www/html",
    "data_dir": "/var/www/html"
  },
  "voltage_threshold": {
    "UL": 250,
    "LL": 220
  },
  "comments": {
    "info": "Power monitoring system maintains 4 JSON files",
    "files": {
      "daily.json": "Last 24 hours (stored locally)",
      "weekly.json": "Last 7 days (stored locally)",
      "monthly.json": "Last 30 days (synced to GitHub)",
      "yearly.json": "Last 365 days (synced to GitHub)"
    },
    "setup_instructions": [
      "1. Clone this repository: git clone https://github.com/username/repo-name.git",
      "2. Edit this config.json file with your credentials",
      "3. Run installation: sudo sh install.sh",
      "4. Access dashboard at: http://device-ip/"
    ]
  }
}
